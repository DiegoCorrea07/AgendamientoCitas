@model IEnumerable<BlogCore.Models.Especialidad>

@{
    ViewData["Title"] = "Lista de Especialidades";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Especialidades</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nueva Especialidad</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblEspecialidades" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var especialidad in Model)
            {
                <tr>
                    <td>@especialidad.Id</td>
                    <td>@especialidad.Nombre</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@especialidad.Id" class="btn btn-primary btn-sm"><i class="fa-solid fa-edit"></i> Editar</a>
                        <a asp-action="Delete" asp-route-id="@especialidad.Id" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash-alt"></i> Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>

        <script src="~/js/especialidades.js" ></script>

    </script>
}
