@model IEnumerable<BlogCore.Models.Cita>

@{
    ViewData["Title"] = "Lista de Citas";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Citas</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nueva Cita</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblCitas" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Paciente</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Médico</th>
                <th>Observaciones</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cita in Model)
            {
                <tr>
                    <td>@cita.Id</td>
                    <td>@(cita.Paciente != null ? cita.Paciente.Nombre : "No asignado")</td>
                    <td>@cita.Fecha.ToShortDateString()</td>
                    <td>@cita.Hora.ToString(@"hh\:mm")</td>
                    <td>@(cita.Medico != null ? cita.Medico.Nombre : "No asignado")</td>
                    <td>@cita.Observaciones</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@cita.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@cita.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/citas.js"></script>
}
