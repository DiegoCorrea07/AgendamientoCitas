@model IEnumerable<BlogCore.Models.HistorialMedico>

@{
    ViewData["Title"] = "Lista de Historiales Médicos";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Historiales Médicos</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nuevo Historial Médico</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblHistorialesMedicos" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre del Paciente</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var historialMedico in Model)
            {
                <tr>
                    <td>@historialMedico.Id</td>
                    <td>@historialMedico.Paciente.Nombre</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@historialMedico.Id" class="btn btn-primary btn-sm"><i class="fa-solid fa-edit"></i> Editar</a>
                        <a asp-action="Delete" asp-route-id="@historialMedico.Id" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash-alt"></i> Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/historialesMedicos.js"></script>
}
