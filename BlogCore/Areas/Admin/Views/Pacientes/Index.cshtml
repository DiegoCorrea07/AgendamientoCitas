@model IEnumerable<BlogCore.Models.Paciente>

@{
    ViewData["Title"] = "Lista de Pacientes";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Pacientes</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nuevo Paciente</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblPacientes" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Fecha de Nacimiento</th>
                <th>Género</th>
                <th>Dirección</th>
                <th>Celular</th>
                <th>Email</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var paciente in Model)
            {
                <tr>
                    <td>@paciente.Id</td>
                    <td>@paciente.Nombre</td>
                    <td>@paciente.FechaNacimiento.ToShortDateString()</td>
                    <td>@paciente.Genero</td>
                    <td>@paciente.Direccion</td>
                    <td>@paciente.Celular</td>
                    <td>@paciente.Email</td>
                    <td>@paciente.UrlImagen</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@paciente.Id" class="btn btn-primary btn-sm"><i class="fa-solid fa-edit"></i> Editar</a>
                        <a asp-action="Delete" asp-route-id="@paciente.Id" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash-alt"></i> Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/pacientes.js"></script>
}
