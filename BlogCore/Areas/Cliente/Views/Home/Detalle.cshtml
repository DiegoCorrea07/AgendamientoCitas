@model BlogCore.Models.Medico

@{
    ViewData["Title"] = "Detalle del Médico";
}

<br />
<div class="container">
    <div class="card">
        <div class="card-header bg-light text-light">
            <div class="col-12">
                <h1 class="text-primary text-center">@Model.Nombre</h1>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-4">
                    <img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block" />
                </div>
                <div class="col-12 col-md-8">
                    <h5 class="card-title">Detalles del Médico</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Especialidad:</strong> @Model.Especialidad.Nombre</li>
                        @* Otros detalles específicos del médico podrían agregarse aquí *@
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver atrás</a>
                </div>
            </div>
        </div>
    </div>
</div>
